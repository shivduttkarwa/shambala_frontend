<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Selected Projects</title>

    <!-- GSAP -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/ScrollTrigger.min.js"></script>

    <!-- LENIS -->
    <script src="https://unpkg.com/@studio-freight/lenis@1.0.27/bundled/lenis.min.js"></script>

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Times New Roman", serif;
        overflow-x: hidden;
        background: #fff;
        color: #111;
      }

      /* ---------------- HERO ---------------- */

      .hero {
        height: 100vh;
        width: 100%;
        position: relative;
        overflow: hidden;
      }

      .hero img {
        position: absolute;
        inset: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        filter: brightness(75%);
      }

      .hero-content {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        text-align: center;
        color: #fff;
        gap: 1rem;
      }

      .hero-content h1 {
        font-size: clamp(3rem, 6vw, 6rem);
        letter-spacing: 0.02em;
        font-weight: 400;
      }

      .hero-content p {
        font-size: clamp(0.9rem, 1.2vw, 1.4rem);
        opacity: 0.85;
        letter-spacing: 0.05em;
      }

      .scroll-cue {
        position: absolute;
        bottom: 4vh;
        left: 50%;
        transform: translateX(-50%);
        font-size: 0.9rem;
        color: #fff;
        opacity: 0.7;
        animation: pulse 2.7s ease-in-out infinite;
      }

      @keyframes pulse {
        0%,
        100% {
          opacity: 0.3;
          transform: translate(-50%, 2px);
        }
        50% {
          opacity: 1;
          transform: translate(-50%, -3px);
        }
      }

      /* ---------------- LAYOUT ---------------- */

      .container {
        width: 86%;
        max-width: 1400px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 45% 55%;
        column-gap: 5vw;
        padding-top: 12vh;
      }

      /* LEFT */

      .left {
        position: sticky;
        top: 30vh;
        height: 40vh;
        display: flex;
        align-items: center;
        overflow: hidden;
      }

      .titles-mask {
        height: 100%;
        width: 100%;
        overflow: hidden;
      }

      .titles-inner {
        position: relative;
        will-change: transform;
        transform: translateY(60px); /* initial offset */
      }

      .title {
        font-size: clamp(2.5rem, 4vw, 4rem);
        line-height: 1.1;
        opacity: 0.15;
        transition: opacity 0.3s ease-out;
        white-space: nowrap;
      }

      .title.is-active {
        opacity: 1;
      }
      .title.is-next {
        opacity: 0.45;
      }
      .title.is-prev {
        opacity: 0.18;
      }

      /* RIGHT */

      .project-section {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
      }

      .project-img-wrap {
        height: 75vh;
        overflow: hidden;
      }

      .project-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transform: translateY(8%);
        transition: transform 1.5s cubic-bezier(0.16, 0.69, 0.11, 1);
      }

      .project-section.is-active .project-img {
        transform: translateY(0%);
      }

      .caption {
        font-size: 0.9rem;
        margin-top: 1.2rem;
        opacity: 0.6;
        letter-spacing: 0.05em;
      }
    </style>
  </head>

  <body>
    <!-- HERO -->
    <section class="hero">
      <img
        src="https://images.unsplash.com/photo-1505842465776-3b4953ca4f44?auto=format&fit=crop&w=2000&q=80"
      />
      <div class="hero-content">
        <h1>SELECTED PROJECTS</h1>
        <p>Architecture designed for human experience.</p>
      </div>
      <div class="scroll-cue">Scroll â†“</div>
    </section>

    <div class="container">
      <!-- LEFT -->
      <div class="left">
        <div class="titles-mask">
          <div class="titles-inner" id="titleTrack">
            <div class="title">Beehive House</div>
            <div class="title">Broadway Loft</div>
            <div class="title">Ocean Parkway</div>
            <div class="title">Sequoia House</div>
            <div class="title">Son Del North</div>
          </div>
        </div>
      </div>

      <!-- RIGHT IMAGES -->
      <div class="right">
        <section class="project-section">
          <div class="project-img-wrap">
            <img
              class="project-img"
              src="https://images.prismic.io/andre-arch/Z6wzp5bqstJ9-gm9_BEEHIVE-EXT-2Bee.png?auto=format&fit=crop&w=2000&q=80"
            />
          </div>
          <div class="caption">Beehive House â€” Accord, NY</div>
        </section>

        <section class="project-section">
          <div class="project-img-wrap">
            <img
              class="project-img"
              src="https://images.prismic.io/andre-arch/Z99gaHdAxsiBvxNk_718BRDWY-KITCHEN-ABSTRACT.png?auto=format&fit=crop&w=2000&q=80"
            />
          </div>
          <div class="caption">Broadway Loft â€” New York, NY</div>
        </section>

        <section class="project-section">
          <div class="project-img-wrap">
            <img
              class="project-img"
              src="https://images.prismic.io/andre-arch/Z-HjnndAxsiBv2H4_CopyofOCEANPKWYEXT-1.jpg?auto=format&fit=crop&w=2000&q=80"
            />
          </div>
          <div class="caption">Ocean Parkway â€” New York, NY</div>
        </section>

        <section class="project-section">
          <div class="project-img-wrap">
            <img
              class="project-img"
              src="https://images.prismic.io/andre-arch/Z-6KNHdAxsiBwRrJ_SEQUOIA-FRONT1-EDIT.jpg?auto=format&fit=crop&w=2000&q=80"
            />
          </div>
          <div class="caption">Sequoia House â€” CA</div>
        </section>

        <section class="project-section">
          <div class="project-img-wrap">
            <img
              class="project-img"
              src="https://images.prismic.io/andre-arch/Z6LpFJbqstJ9-O8h_7%2BSonDelNorte.png?auto=format&fit=crop&w=2000&q=80"
            />
          </div>
          <div class="caption">Son Del North â€” NY</div>
        </section>
      </div>
    </div>

    <script>
      /* smooth scrolling */
      const lenis = new Lenis({ duration: 2, smooth: true });
      function raf(time) {
        lenis.raf(time);
        requestAnimationFrame(raf);
      }
      requestAnimationFrame(raf);

      gsap.registerPlugin(ScrollTrigger);

      window.onload = () => {
        const sections = gsap.utils.toArray(".project-section");
        const titles = gsap.utils.toArray(".title");
        const track = document.getElementById("titleTrack");

        const step =
          titles[1].getBoundingClientRect().top -
          titles[0].getBoundingClientRect().top;

        /* ðŸ”¥ FIX: FORCE INITIAL PERFECT CENTER */
        gsap.set(track, { y: 60 });

        function setActive(i) {
          gsap.to(track, {
            y: -step * i + 60,
            duration: 1.4,
            ease: "cubic-bezier(.16,.69,.11,1)",
          });

          titles.forEach((t, idx) => {
            t.classList.remove("is-active", "is-next", "is-prev");
            if (idx === i) t.classList.add("is-active");
            if (idx === i + 1) t.classList.add("is-next");
            if (idx === i - 1) t.classList.add("is-prev");
          });
        }

        setActive(0);

        sections.forEach((sec, index) => {
          ScrollTrigger.create({
            trigger: sec,
            start: "top center",
            end: "bottom center",
            onEnter: () => {
              setActive(index);
              sec.classList.add("is-active");
            },
            onEnterBack: () => {
              setActive(index);
              sec.classList.add("is-active");
            },
            onLeave: () => sec.classList.remove("is-active"),
            onLeaveBack: () => sec.classList.remove("is-active"),
          });
        });
      };
    </script>
  </body>
</html>
